<div class="center" align="center">
<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
<%= f.label :firstName %>
<%= f.text_field :firstName, required:true %>
<br><br>
<%= f.label :lastName %>
<%= f.text_field :lastName, required:true %>
<br><br>
<%= f.label :email %>
<%= f.email_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br><br>
<%= f.submit "Submit" %>
<br><br><button type="button"><%= link_to "Log In with Google", '/auth/google_oauth2' %></button>

<% end %>
</div>