<h1>Log In Please</h1>

<%= flash[:error] %>

   <%= form_for @user do |f| %>
    <%= f.label :firstName %>
    <%= f.text_field :firstName, required:true %>
    <br><br>
    <%= f.label :lastName %>
    <%= f.text_field :lastName, required:true %>
    <br><br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br><br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>
    <%= f.submit "Log In" %>
    
    <% end %>