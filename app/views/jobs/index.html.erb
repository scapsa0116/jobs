index/job



<div>
<table id="jobs">

<tbody>
<% @jobs.each do |job| %>

  
    <tr>
    <th>Profile Picture</th>
    <th>Company Name</th>
    <th>Company Service</th>
    <th>Company Category</th>
    <th>Company Adress</th>
    <th>Company Phone Number</th>
    <th>Company Email</th>
  </tr>
  
    <tr>
    <td> <%= image_tag job.image.url(:medium) %> </td>
    <td>   <%= job.title %></td>
    <td>   <%= job.service %></td>
    <td>   <%= job.category.name%></td>
    <td>   <%= job.adress %></td>
    <td>   <%= job.phone %></td>
    <td>   <%= job.email %></td>
    <% if job.user == current_user%>
    <td><%= link_to "Edit" , edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
    <% end %>

    </tbody>
    </table>
    <br><br>
    </div>